---
import { ProjectsPage } from "../components/pages/Projects";
import Layout from "../layouts/Layout.astro";
import { SEO } from "astro-seo";
---

<Layout>
  <head>
    <SEO
      title="David Cao's Projects"
      description="A list of programming projects I have worked on"
      openGraph={{
        basic: {
          title: "David Cao's Projects",
          type: "website",
          image: "/profile.png",
        },
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.ico" }],
        meta: [
          {
            name: "twitter:image",
            content: "/profile.png",
          },
          { name: "twitter:title", content: "David Cao's Projects" },
          {
            name: "twitter:description",
            content: "A list of programming projects I have worked on",
          },
        ],
      }}
    />
  </head>
  <ProjectsPage client:load />
</Layout>
